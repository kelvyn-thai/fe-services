{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@combobox/*": ["./src/@combobox/*"],
      "@input/*": ["./src/@input/*"],
      "@label/*": ["./src/@label/*"],
      "@icon/*": ["./src/@icon/*"],
      "@hook/*": ["./src/@hook/*"],
      "@button/*": ["./src/@button/*"],
      "@zustand/*": ["./src/@zustand/*"],
      "@utils/*": ["./src/@utils/*"],
      "@icons/*": ["./src/@icons/*"]
    }
  },
  "include": ["src", "lib"],
  "exclude": ["node_modules"]
}
